@model RefilWeb.Models.ViewModels.SendEmailViewModel
@{
    ViewBag.Title = "AdminEmail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        
        <h2>Send Email To All Users</h2>

        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            
            <div class="form-group">
                @Html.LabelFor(m => m.Subject, new { @class = "control-label" })
                @Html.EditorFor(m => m.Subject, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Subject, "", new { @class = "text-danger"})
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Body, new { @class = "control-label" })
                @Html.TextAreaFor(m => m.Body,  new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Body, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn">send</button>
        }
        <br />
        @Html.ActionLink("back to admin home", "GetAdminView", "Admin")
    </div>
</div>
