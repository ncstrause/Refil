@model RefilWeb.Models.ViewModels.BookListViewModel

@{
    ViewBag.Title = "Book List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Html.DisplayFor(m => m.Meeting.Date) Book List</h2>

<p>
    <a href="/meetings/@Model.Meeting.Id/books/suggest">suggest books</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Meeting.Book.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Meeting.Book.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Meeting.Book.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Meeting.Book.Summary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Meeting.Book.Votes)
        </th>
    </tr>

@foreach (var item in Model.Books) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Summary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Votes)
        </td>
        <td>
            <a class="btn btn-sm btn-success btn-default" href="/meetings/@Model.Meeting.Id/books/@item.Id/upvote">
                <span class="glyphicon glyphicon-chevron-up"></span>
            </a>
            <br />
            <br />
            <a class="btn btn-sm btn-danger btn-default" href="/meetings/@Model.Meeting.Id/books/@item.Id/downvote">
                <span class="glyphicon glyphicon-chevron-down"></span>
            </a>
        </td>
    </tr>
}

</table>

@if (User.IsAdmin)
{
    <a href="/meetings/@Model.Meeting.Id/books/process" class="btn btn-lg btn-warning">Process Books</a>
}

